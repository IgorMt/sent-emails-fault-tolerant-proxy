{
  "name": "sends-emails-fault-tolerance-proxy",
  "version": "1.0.0",
  "description": "The emails sending fault-tolerant proxy.",
  "repository": "https://github.com/IgorMt/sent-emails-fault-tolerant-proxy",
  "author": "imaltsev",
  "license": "ISC",
  "scripts": {
    "start-server": "nodemon src/index.ts",
    "start": "./node_modules/.bin/ts-node src/index.ts",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "lint": "tslint ./src/**/*.ts ./test/**/*.ts",
    "lint:fix": "tslint --fix ./src/**/*.ts ./test/**/*.ts -t verbose",
    "pretest": "cross-env NODE_ENV=test npm run build && npm run lint",
    "test": "cross-env NODE_ENV=test mocha --exit",
    "test:coverage": "nyc npm run test",
    "swagger": "swaggerGen -c ./swaggerConfig.json",
    "tsc": "tsc"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.4.0",
    "@types/better-queue": "^3.8.1",
    "@types/bunyan": "^1.8.6",
    "@types/mailgun-js": "^0.16.3",
    "better-queue": "^3.8.10",
    "bunyan": "^1.8.12",
    "class-validator": "^0.9.1",
    "mailgun-js": "^0.22.0",
    "typescript-ioc": "^1.2.5",
    "typescript-rest": "^2.0.0",
    "typescript-rest-swagger": "^0.0.23"
  },
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/express": "^4.16.0",
    "@types/mocha": "5.2.5",
    "@types/request": "2.48.1",
    "chai": "4.2.0",
    "cross-env": "5.2.0",
    "express": "^4.17.3",
    "istanbul": "0.4.5",
    "mocha": "5.2.0",
    "nodemon": "^1.19.0",
    "nyc": "^14.1.1",
    "request": "2.87.0",
    "rimraf": "2.6.3",
    "source-map-support": "0.5.9",
    "ts-node": "7.0.1",
    "tslint": "5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "3.2.2"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "report-dir": "./reports/coverage",
    "sourceMap": true,
    "instrument": true
  }
}
